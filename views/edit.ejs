<%- include("partials/header") %>
	
	<div class="ui container segment text main">
		<div class="ui huge header">Edit Book</div>
		<form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="book[title]" value="<%= book.title %>">
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="book[image]" value="<%= book.image %>">
			</div>
			<div class="field">
				<label>Author</label>
				<input type="text" name="book[author]" value="<%= book.author %>">
			</div>
			<div class="field">
				<label>Genre</label>
				<input type="text" name="book[genre]" value="<%= book.genre %>">
			</div>
			<div class="field">
				<label>Publisher</label>
				<input type="text" name="book[publisher]" value="<%= book.publisher %>">
			</div>
			<div class="field">
				<label>Book content</label>
				<textarea name="book[body]" ><%= book.body %></textarea>
			</div>
			<button class="ui violet inverted button big" type="submit">Update</button>
		</form>
	</div>	

<%- include("partials/footer") %>