<%- include("partials/header") %>
	
	<div class="ui container segment text main">
		<div class="ui huge header">New Book</div>
		<form id="NewBookForm" class="ui form" action="/upload" method="POST" enctype="multipart/form-data">
			<div class="field">
				<label>Title</label>
				<input type="text" placeholder="Title" 	name="title" required>
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" placeholder="Image" name="image" required>
			</div>
			<div class="field">
				<label>Genre</label>
				<input type="text" placeholder="Genre" name="genre" required>
			</div>
			<div class="field">
				<label>Author</label>
				<input type="text" placeholder="Author" name="author" required>
			</div>
			<div class="field">
				<label>Publisher</label>
				<input type="text" placeholder="Publisher" name="publisher" required>
			</div>
			<div class="field">
				<label>Upload File</label>
  				<input type="file" name ="file" placeholder="Upload File">
			</div>
			<div class="field">
				<textarea name="body" placeholder="Book description goes here" required></textarea>
			</div>
			<input class="ui green inverted button big" type="submit">
			<div style="display:inline">
				<a onclick="resetForm()" class="ui violet inverted button big">Reset</a>
			</div>
			<div style="display:inline">
				<a href="/" class="ui red inverted button big">Cancel</a>
			</div>
		</form>
	</div>	


<script>
	function resetForm(){
		document.getElementById("NewBookForm").reset();
	}
</script>

<%- include("partials/footer") %>